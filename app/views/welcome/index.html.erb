<div class="dashboard">
  <div class='row centered'>
    <h1> Welcome </h1>
  </div>

  <div class='row centered'>
    <% if @see_tutoring_sessions %>
      <div class='col-md-2 text-center'>
        <%= link_to 'My Sessions', tutors_tutoring_sessions_path(current_user.tutor_id), class: 'button' %>
      </div>
    <% end %>

    <% if @see_students %>
      <div class='col-md-2 text-center'>
        <%= link_to 'Students', students_path, class: 'button' %>
      </div>
    <% end %>

    <% if @see_tutors %>
      <div class='col-md-2 text-center'>
        <%= link_to 'Tutors', tutors_path, class: 'button' %>
      </div>
    <% end %>

    <% if @see_matches %>
      <div class='col-md-2 text-center'>
        <%= link_to 'Matches', matches_path, class: 'button' %>
      </div>
    <% end %>

    <% if @see_coordinators %>
      <div class='col-md-2 text-center'>
        <%= link_to 'Coordinators', coordinators_path, class: 'button' %>
      </div>
    <% end %>

    <% if @see_affiliates %>
      <div class='col-md-2 text-center'>
        <%= link_to 'Affiliates', affiliates_path, class: 'button' %>
      </div>
    <% end %>
  </div>
</div>
