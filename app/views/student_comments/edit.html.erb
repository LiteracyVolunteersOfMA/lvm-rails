<div class="row">
  <div class="col-md-12">
    <h1 class="text-center">
      Edit Student Comment<br>
      <small> For <%= link_to @student.name, @student %> </small>
    </h1>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <hr>
    <%= simple_form_for :student_comment, url: student_comment_path(@student_comment), method: :patch do |f| %>
      <%= render partial: 'form', locals: {f: f} %>
    <% end %>
  </div>
</div>
