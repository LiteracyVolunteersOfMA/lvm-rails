<div class="row">
  <div class="col-md-12">
    <h1 class="text-center">
      New Student Comment <br>
      <small> For <%= @student.name %> </small>
    </h1>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <hr>
    <%= simple_form_for :student_comment, url: student_comments_path, method: :post do |f| %>
      <%= render partial: 'form', locals: {f: f} %>
    <% end %>
  </div>
</div>
