<%= simple_form_for(@coordinator) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :date_of_birth, input_html: { class: 'datepicker' }, placeholder: "YYYY-MM-DD", as: :string, required: false %>
    <%= f.input :email, as: :string, label: "email", maxlength: 255, required: false, input_html: { class: "mask_email" } %>
    <%= f.input :phone_number, maxlength: 14, placeholder: "(###) ###-####", required: false, input_html: { class: "mask_phone" } %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<script>$('.datepicker').datepicker({ 'dateFormat': 'yy-mm-dd' });</script>
<script>
  $('.mask_phone').inputmask("(999) 999-9999", { "placeholder": "#" });
  $('.mask_email').inputmask({ alias: "email" });
</script>
