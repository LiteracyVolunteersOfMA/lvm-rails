<h2>Coordinators</h2>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="2"></th>
  </tr>

  <% @coordinators.each do |coordinator| %>
    <tr>
      <td><%= coordinator.name %></td>
      <td><%= link_to 'Show', coordinator_path(coordinator) %></td>
      <td><%= link_to 'Edit', edit_coordinator_path(coordinator) %></td>
      <td><%= link_to 'Destroy', coordinator_path(coordinator),
        method: :delete,
        data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Back', root_path %>
