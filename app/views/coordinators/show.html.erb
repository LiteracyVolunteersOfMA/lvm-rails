<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <h1 class="index-header text-center">
              <%= @coordinator.name %> </br>
              <small> Coordinator </small>
            </h1>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row show-button-row">
  <div class="col-md-6 col-md-offset-3">
    <div class="row">
      <div class="col-md-6">
        <%= link_to edit_coordinator_path(@coordinator) do %>
          <button class="btn btn-primary">
            <span class="glyphicon glyphicon-pencil"></span> Edit
          </button>
        <% end %>
      </div>

      <div class="col-md-6 text-right">
        <%= link_to coordinator_path(@coordinator), method: :delete, data: { confirm: 'Are you sure you want to delete this coordinator?' } do %>
          <button class="btn btn-danger">
            <span class="glyphicon glyphicon-trash"></span> Delete
          </button>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="row">
      <div class="col-md-12">
        <div class="panel panel-default">
          <div class="panel-body">
            <div class="row">
              <div class="col-md-6 text-center">
                <h4> Affiliate </h4>
                <p> <%= link_to @coordinator.affiliate.name, @coordinator.affiliate %> </p>
              </div>

              <div class="col-md-6 text-center">
                <h4> Phone Number </h4>
                <p> <%= @coordinator.phone_number %> </p>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6 text-center">
                <h4> Email Address </h4>
                <p> <%= @coordinator.email %> </p>
              </div>

              <div class="col-md-6 text-center">
                <h4> Date of Birth </h4>
                <p> <%= @coordinator.date_of_birth.strftime("%B %d, %Y") %> </p>
              </div>
            </div>

              <div class="row">
                <div class="col-md-12 text-center">
                  <h4> Attached User Account</h4>
                  <% if @user %>
                    <p> <%= link_to @user.email, @user %> </p>
                  <% else %>
                    <p> No Account Attached
                  <% end %>
                </div>
              </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
