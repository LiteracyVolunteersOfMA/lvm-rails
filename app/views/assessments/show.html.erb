<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <h1 class="index-header text-center">
              Assessment </br>
              <small> For <%= link_to @assessment.student.name, @assessment.student %> </small>
            </h1>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row show-button-row">
  <div class="col-md-6 col-md-offset-3">
    <div class="row">
      <div class="col-md-6">
        <%= link_to edit_assessment_path(@assessment) do %>
          <button class="btn btn-primary">
            <span class="glyphicon glyphicon-pencil"></span> Edit
          </button>
        <% end %>
      </div>

      <div class="col-md-6 text-right">
        <%= link_to assessment_path(@assessment), method: :delete, data: { confirm: 'Are you sure you want to delete this assessment?' } do %>
          <button class="btn btn-danger">
            <span class="glyphicon glyphicon-trash"></span> Delete
          </button>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="row">
      <div class="col-md-12">
        <div class="panel panel-default">
          <div class="panel-body">
            <div class="row">
              <div class="col-md-6 text-center">
                <h4> Score </h4>
                <p> <%= @assessment.score %> </p>
              </div>

              <div class="col-md-6 text-center">
                <h4> Category </h4>
                <p> <%= @assessment.category %> </p>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6 text-center">
                <h4> Name </h4>
                <p> <%= @assessment.name %> </p>
              </div>

              <div class="col-md-6 text-center">
                <h4> Type </h4>
                <p> <%= @assessment.assessment_type %> </p>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6 text-center">
                <h4> Date </h4>
                <p> <%= @assessment.date.strftime("%M %d, %Y") %> </p>
              </div>

              <div class="col-md-6 text-center">
                <h4> Level </h4>
                <p> <%= @assessment.level %> </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
