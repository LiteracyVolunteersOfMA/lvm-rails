<% if @assessment.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@assessment.errors.count, "error") %> prohibited
      this assessment from being saved:
    </h2>
    <ul>
      <% @assessment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<form role="form">
  <div class="row">
    <div class="col-md-4">
      <%= f.input :category, collection: assessment_category, required: true %>
    </div>

    <div class="col-md-4">
      <%= f.input :level, collection: assessment_level, required: true %>
    </div>

    <div class="col-md-4">
      <%= f.input :name, collection: assessment_name, required: true %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <%= f.input :assessment_type, collection: assessment_type, required: true %>
    </div>
    <div class ="col-md-4">
      <%= f.input :score %>
    </div>
    <div class ="col-md-4">
      <%= f.input :date, input_html: {class: 'datepicker'}, placeholder: "YYYY-MM-DD", as: :string, required: true %>
    </div>
  </div>

  <%= f.button :submit %>

  <%= f.hidden_field :student_id, value: @student.id %>
</form>

<script>$('.datepicker').datepicker({'dateFormat': 'yy-mm-dd'});</script>
