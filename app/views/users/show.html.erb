<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <h1 class="index-header text-center">
              User Account
            </h1>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row show-button-row">
  <div class="col-md-6 col-md-offset-3">
    <div class="row">
      <div class="col-md-6">
        <%= link_to edit_user_path(@user) do %>
          <button class="btn btn-primary">
            <span class="glyphicon glyphicon-pencil"></span> Edit
          </button>
        <% end %>
      </div>

      <div class="col-md-6 text-right">
        <%= link_to users_path(@user), method: :delete, data: { confirm: 'Are you sure you want to delete this user account?' } do %>
          <button class="btn btn-danger">
            <span class="glyphicon glyphicon-trash"></span> Delete
          </button>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="row">
      <div class="col-md-12">
        <div class="panel panel-default">
          <div class="panel-body">
            <div class="row">
              <div class="col-md-6 text-center">
                <h4> Role </h4>
                <p> <%= @user.role_string %></p>
              </div>

              <div class="col-md-6 text-center">
                <h4> Email Address </h4>
                <p> <%= @user.email %></p>
              </div>
            </div>

            <% if @user.coordinator? %>
              <% coordinator = Coordinator.find(@user.coordinator_id) %>
              <div class="row">
                <div class="col-md-12 text-center">
                  <h4> Attached Coordinator Record </h4>
                  <p> <%= link_to coordinator.name, coordinator %></p>
                </div>
              </div>
            <% end %>

            <% if @user.tutor? %>
              <% tutor = Tutor.find(@user.tutor_id) %>
              <div class="row">
                <div class="col-md-12 text-center">
                  <h4> Attached Tutor Record </h4>
                  <p> <%= link_to tutor.name, tutor %></p>
                </div>
              </div>
            <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>


