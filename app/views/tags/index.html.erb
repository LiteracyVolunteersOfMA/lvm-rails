<% if !@tags.empty? %>
  <div class="row">
    <div class="col-md-2">
      <h4 class="text-center">Top 10 Tags by Count</h4>
      <table class="table table-striped">
        <tbody>
          <% @tags.sort {|a,b| b.count <=> a.count}[0..9].each do |tag| %>
            <tr>
              <td><%= link_to tag.name, tag %></td>
              <td><%= tag.count %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-9 col-md-offset-1">
      <div class="row">
        <div class="col-xs-6">
          <h4>Tag Management</h4>
        </div>
        <div class="col-xs-6 text-right">
          <%= link_to new_tag_path do %>
            <button class="btn btn-default">New Tag</button>
          <% end %>
        </div>
      </div>
      <table class="table table-striped">
        <tbody>
          <% @tags.order(:name).each do |tag| %>
            <tr>
              <td><%= link_to tag.name, tag %></td>
              <td><%= link_to 'Edit', edit_tag_path(tag) %></td>
              <td><%= link_to 'Delete', tag_path(tag),
                method: :delete,
                data: { confirm: 'Are you sure you want to delete this tag?' } %></td>

            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% else %>
  <h4>No tags found! Add new tags here.</h4>
<% end %>
