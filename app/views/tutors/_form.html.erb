
<% if @tutor.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@tutor.errors.count, "error") %> prohibited
      this tutor from being saved:
    </h2>
    <ul>
      <% @tutor.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<form role="form">

  <div class="row">
    <div class="col-md-6">
      <!-- Affiliate will go here -->
    </div>

    <div class="col-md-6">
      <div class="pull-right">
        <label class="control-label" for="intakeDate"> Intake Date </label>
        <input type="text" class="form-control datepicker" id="intakeDate" name="intake_date" placeholder="MM/DD/YYYY">
      </div>
    </div>
  </div>

  <div class="row">
    <div class ="col-md-12">
      <%= f.input :first_name %>
    </div>
  </div>

  <div class="row">
    <div class ="col-md-12">
      <%= f.input :last_name %>
    </div>
  </div>

  <div class="row">
    <div class ="col-md-6">
      <%= f.input :address1, label: "Address 1" %>
    </div>

    <div class ="col-md-6">
      <%= f.input :address2, label: "Address 2" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">
      <%= f.input :city %>
    </div>

    <div class="col-md-2">
      <%= f.input :zip, label: "Zip", maxlength: 5 %>
    </div>

    <div class="col-md-2">
      <%= f.input :state, collection: us_states, selected: "MA" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <p class="help-block"> At least one phone number is required.</p>
    </div>

    <div class="col-md-4">
      <%= f.input :home_phone %>
    </div>

    <div class="col-md-4">
      <%= f.input :cell_phone %>
    </div>

    <div class="col-md-4">
      <%= f.input :other_phone %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <%= f.input :email_preferred, label: "Preferred email" %>
    </div>

    <div class="col-md-6">
      <%= f.input :email_other, label: "Other email" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <label class="control-label"> Gender </label>
        <div class="input-group">
          <label class="radio-inline">
            <input type="radio" name="inlineRadioOptions" id="female" value="female"> Female
          </label>
          <label class="radio-inline">
            <input type="radio" name="inlineRadioOptions" id="male" value="male"> Male
          </label>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="pull-right">
        <label class="control-label" for="dob"> Date of Birth </label>
        <input type="text" class="form-control datepicker" id="dob" name="dob" placeholder="MM/DD/YYYY">
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <%= f.input :native_language, collection: native_language, selected: "English" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <%= f.input :race, collection: race %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <label class="control-label" for="dob"> Orientation Date</label>
        <input type="text" class="form-control datepicker" id="orientationDate" name="orientation_date" placeholder="MM/DD/YYYY">
      </div>
    </div>

    <div class="col-md-4">
      <div class="form-group">
        <label class="control-label" for="dob"> Training Date</label>
        <input type="text" class="form-control datepicker" id="trainingDate" name="training_date" placeholder="MM/DD/YYYY">
      </div>
    </div>

    <div class="col-md-4">
      <div class="form-group">
        <label class="control-label"> Training Type </label>
        <div class="input-group">
          <label class="radio-inline">
            <input type="radio" name="inlineRadioOptions" id="abe" value="ABE"> ABE
          </label>
          <label class="radio-inline">
            <input type="radio" name="inlineRadioOptions" id="esol" value="ESOL"> ESOL
          </label>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <%= f.input :referral, collection: referral %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <p class="help-block"> If other:</p>
    </div>

    <div class="col-md-12">
      <%= f.input :referral, label: false %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <%= f.input :education, collection: education %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <%= f.input :employment_status, collection: employment %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <%= f.input :occupation, label: "Specific Occupation" %>
    </div>
  </div>

  <%= f.button :submit %>

</form>
