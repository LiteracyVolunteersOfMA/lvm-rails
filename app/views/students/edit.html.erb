<div class="row">
  <div class="col-md-3 hidden-sm hidden-xs">
    <div class="affix" id="form-navigation">
      <h5>Form Navigation</h5>
      <ul class="nav nav-pills nav-stacked">
        <li class="active"><a href="#lvmInfo">LVM Information</a></li>
        <li><a href="#contactInfo">Contact Information</a></li>
        <li><a href="#personalInfo">Personal Information</a></li>
        <li><a href="#preferences">Preferences</a></li>
        <li><a href="#background">Background</a></li>
        <li><a href="#referral">Referral & Services</a></li>
